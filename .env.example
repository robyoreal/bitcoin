PORT=3001
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
INITIAL_BALANCE=10000

# Database Configuration
# Supported: sqlite, postgresql, mysql
DB_TYPE=sqlite
DB_PATH=./crypto_trading.db

# PostgreSQL Configuration (if DB_TYPE=postgresql)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=crypto_trading
# DB_USER=postgres
# DB_PASSWORD=yourpassword

# MySQL Configuration (if DB_TYPE=mysql)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=crypto_trading
# DB_USER=root
# DB_PASSWORD=yourpassword

# Cache Configuration
# Supported strategies: memory, redis, file
CACHE_STRATEGY=memory

# Redis Configuration (if CACHE_STRATEGY=redis)
# REDIS_URL=redis://localhost:6379

# Cache TTL (Time To Live) in seconds
CACHE_CRYPTO_PRICES_TTL=60
CACHE_EXCHANGE_RATES_TTL=300
CACHE_TOP_CRYPTOS_TTL=120
CACHE_SEARCH_TTL=600
